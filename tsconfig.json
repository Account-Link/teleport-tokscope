{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib/**/*.ts", "test/**/*.ts", "xordi-enclave/*.ts"],
  "exclude": ["node_modules", "dist"]
}